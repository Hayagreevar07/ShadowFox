import subprocess
import os


REPO_NAME = "cricket-fielding-analysis"
GITHUB_URL = f"https://github.com/Hayagreevar07/ShadowFo" 
COMMIT_MSG = "Initial commit - uploaded via Python script"

def run_git_command(cmd):
    result = subprocess.run(cmd, shell=True, text=True)
    if result.returncode != 0:
        print(f"Error running: {cmd}")
        exit()


run_git_command("git init")

run_git_command(f"git remote add origin {cricket-fielding-analysis}")


run_git_command("git add .")

run_git_command(f'git commit -m "{COMMIT_MSG}"')

run_git_command("git branch -M main")
run_git_command("git push -u origin main")

print("âœ… Uploaded successfully to GitHub!")
